def missing_number(nums):
    n = len(nums)
    total_sum = n * (n + 1) / 2
    actual_sum = sum(nums)
    return int(total_sum - actual_sum)

# Example 1
nums1 = [3, 0, 1]
print(missing_number(nums1))  # Output: 2

# Example 2
nums2 = [0, 1]
print(missing_number(nums2))  # Output: 2

# Example 3
nums3 = [9,6,4,2,3,5,7,0,1]
print(missing_number(nums3))  # Output: 8

# Example 4
nums4 = [0]
print(missing_number(nums4))  # Output: 1
